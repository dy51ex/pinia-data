{
  "compilerOptions": {
    "target": "ES6",
    "module": "UMD",
    "rootDir": "./", 
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "exclude": [
    "./tests/",
    "./build/"
  ]
}
